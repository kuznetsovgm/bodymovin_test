# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# Chat IDs where stickers will be uploaded to get file_id (comma-separated)
# Use your own chat ID or channel ID (use @userinfobot to get your ID)
UPLOAD_CHAT_IDS=123456789,987654321

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Admin User IDs (comma-separated)
# These users can manage sticker configurations
ADMIN_USER_IDS=123456789

# Environment
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info
ENABLE_LOKI=true
LOKI_HOST=http://loki:3100

# Metrics Configuration
METRICS_PORT=3099
# Note: Bot metrics are exposed on host port 9095 to avoid conflicts

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Debounce delay for inline queries (milliseconds)
DEBOUNCE_DELAY=2000

# Worker Pool Configuration
# Number of worker threads for parallel sticker generation (default: CPU count)
WORKER_POOL_SIZE=4
# Maximum number of tasks in the worker queue (default: 100)
WORKER_QUEUE_SIZE=100

CONFIG_UI_ALLOWED_IP=127.0.0.1